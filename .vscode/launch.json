{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}/packages/scandipwa/"
        },
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/packages/scandipwa"
        },
        {
            "command": "npm run build",
            "name": "Run npm build",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/packages/scandipwa"
        },
        {
            "command": "npm run build",
            "name": "Run npm build (MAGENTO)",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none",
                "BUILD_MODE": "magento"
            },
            "cwd": "${workspaceFolder}/packages/scandipwa"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "CMA",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/create-magento-app/index.js",
            "args": [
                "runtime-packages/cma"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "CSA",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/create-scandipwa-app/index.js",
            "args": [
                "runtime-packages/csa"
            ]
        },
        {
            "name": "Start",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "env": {
                "SKIP_PREFLIGHT_CHECK": true
            },
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/runtime-packages/scandipwa",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "ESLint",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "eslint"
            ],
            "env": {
                "SKIP_PREFLIGHT_CHECK": true
            },
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Build:Magento",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "build"
            ],
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/runtime-packages/scandipwa",
            "env": {
                "BUILD_MODE": "magento"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Link",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/runtime-packages/csa",
            "program": "${workspaceFolder}/node_modules/@scandipwa/scandipwa-scripts/bin/scandipwa-scripts.js",
            "args": [
                "link"
            ]
        },
        {
            "name": "CLI",
            "program": "${workspaceFolder}/build-packages/scandipwa-cli/index.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "create",
                "component",
                "--redux",
                "AddToCart"
            ],
            "cwd": "${workspaceFolder}/runtime-packages/csa",
            "type": "pwa-node"
        },
        {
            "name": "VSCode",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/build-packages/scandipwa-development-toolkit-vscode/${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/build-packages/scandipwa-development-toolkit-vscode"
            ],
            "outFiles": [
                "${workspaceFolder}/build-packages/scandipwa-development-toolkit-vscode/out/**/*.js"
            ],
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}
